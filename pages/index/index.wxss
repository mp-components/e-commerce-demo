page {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-top: 88rpx;
  background-color: #f6f6f6;
}

.topbar {
  position: fixed;
  top: 0;
  z-index: 99;
  width: 100%;
  padding: 20rpx 24rpx;
  background-color: #fff;
}
.topbar__title {
  font-size: 34rpx;
  font-weight: 500;
  line-height: 48rpx;
  color: #333;
}

.recommend {
  display: flex;
  width: 1064rpx;
  padding: 20rpx 24rpx;
}
.recommend__item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
  border-radius: 4rpx;
  background-color: #fff;
  font-size: 34rpx;
  color: #999;
}
.recommend__item:last-child {
  margin-right: 0;
}

.holder {
  position: fixed;
  top: 88rpx;
  z-index: -1;
  width: 100%;
  height: 1rpx;
  background: transparent;
}

.menu {
  display: flex;
  flex-grow: 1;
}
.menu__tabs {
  width: 160rpx;
  min-height: 100%;
  background-color: #f0f0f0;
}
.menu__content {
  width: 590rpx;
  background-color: #f6f6f6;
}

.tabs {
  position: sticky; /* 兼容性未知 */ 
  top: 88rpx;
}
.tab {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
}
.tab__text {
  font-size: 26rpx;
  line-height: 38rpx;
  color: #666;
}
.tab.active {
  background-color: #f6f6f6;
}
.tab.active .tab__text {
  color: #333;
}

.sku-group {
  padding-bottom: 32rpx;
}
.sku-title {
  position: sticky; /* 兼容性未知 */ 
  top: 88rpx;
  z-index: 98;
  padding: 32rpx 24rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #333;
  background-color: #f6f6f6;
}
.sku-list {
  padding: 0 24rpx;
}
.sku {
  display: flex;
  align-items: center;
  width: 100%;
  height: 160rpx;
  margin-bottom: 16rpx;
  padding: 0 32rpx;
  border-radius: 6rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
}
.sku:last-child {
  margin-bottom: 0;
}
